/**index.wxss**/


.container {
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
  background: #4BC1D2;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.weui_cell {
  position: relative;
  display: flex;
  padding: 15px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid rgb(229, 229, 229);
}

.weui_cell_hd {
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}

.weui_cell_hd image {
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}

.weui_cell_bd {
  display: inline-block;
}

.weui_cell_bd_p {
  font-size: 14px;
  /*color: #939393;*/
  color: #5C5C5C;
}
.badge {
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #f00;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}
.with_arrow {
  position: absolute;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-image: url(https://github.com/caiya/icons/blob/master/right.png?raw=true);
  /*background-image: url(/static/images/right.png);  不知道为啥这样写就是不显示*/
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.with_text {
  position: absolute;
  top: 18px;
  /*margin-left: 370rpx;*/
  right:76rpx;
  height: 15px;
  font-size: 14px;
  color: #ccc;
}